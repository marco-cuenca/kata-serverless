{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir":"./",
        "strict":true,
        "strictPropertyInitialization":false,
        "moduleResolution":"node",
        "baseUrl":".",
        "paths":{
            "*":[
                "node_modules/@types/*",
                "node_modules/*"
            ]
        },
        "typeRoots":[
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "experimentalDecorators":true,
        "emitDecoratorMetadata":true,
        "skipLibCheck":true,
        "forceConsistentCasingInFileNames":true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude":[
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
